<style>
	/* General Styles */
	body {
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		margin: 0;
		padding: 0;
		background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
		color: #333;
	}
	.header-container {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 20px;
		background: #2563eb;
		color: #fff;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	}
	h1 {
		font-size: 2.5rem;
		margin: 0;
		animation: fadeIn 1s ease-in-out;
	}
	nav ul {
		margin: 0;
		padding: 0;
		list-style: none;
		display: flex;
		align-items: center;
	}
	li {
		margin-left: 20px;
		position: relative;
	}
	li a {
		text-decoration: none;
		color: #fff;
		font-weight: bold;
		transition: color 0.3s;
	}
	li a:hover {
		color: #93c5fd;
	}
	li ul {
		display: none;
		position: absolute;
		background: #fff;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		padding: 10px;
		list-style: none;
		z-index: 1000;
		left: 0;
		top: 30px;
	}
	li:hover ul {
		display: block;
	}
	li ul li a {
		color: #333;
	}
	li ul li a:hover {
		color: #2563eb;
	}

	/* Content Section */
	.content {
		padding: 40px;
		text-align: center;
	}
	.content h2 {
		font-size: 2rem;
		animation: slideInFromLeft 0.8s ease-out;
	}
	.content p {
		font-size: 1.2rem;
		color: #555;
	}

	/* Cards */
	.card-container {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 20px;
		margin-top: 30px;
	}
	.card {
		background: #fff;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		padding: 20px;
		border-radius: 10px;
		transition: transform 0.3s, box-shadow 0.3s;
	}
	.card:hover {
		transform: translateY(-10px);
		box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
	}
	.card h3 {
		margin-top: 0;
		color: #2563eb;
	}
	.card p {
		color: #555;
	}

	/* Animations */
	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}
	@keyframes slideInFromLeft {
		from {
			transform: translateX(-50%);
			opacity: 0;
		}
		to {
			transform: translateX(0);
			opacity: 1;
		}
	}
</style>
